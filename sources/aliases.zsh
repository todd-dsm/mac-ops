# Core Utils: Filesystem Behavior
alias ll='ls --color -l'
alias la='ls --color -al'
alias ld='ls --color -ld'
alias lh='ls --color -alh'
alias cp='cp -rfvp'
alias mv='mv -v'
alias zip="$(whence zip)"
alias unzip="$(whence unzip)"
alias hist='history | cut -c 8-'

###############################################################################
###                                   grep                                  ###
###############################################################################
alias grep='grep     --color=auto' 2>/dev/null
alias egrep='grep -E --color=auto' 2>/dev/null
alias fgrep='fgrep   --color=auto' 2>/dev/null

